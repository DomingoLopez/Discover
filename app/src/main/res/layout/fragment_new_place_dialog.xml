<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.myplaces.NewPlaceDialogFragment">


    <ImageButton
        android:id="@+id/btnAddPlace"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="90dp"

        android:layout_marginTop="30dp"
        android:background="@color/orange_light"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/checkok"
        app:layout_constraintStart_toStartOf="@+id/new_place_description"
        app:layout_constraintTop_toBottomOf="@+id/new_place_description" />



    <EditText
        android:id="@+id/new_place_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/orange_solid"
        android:ems="10"
        android:hint="Título"
        android:nextFocusDown="@+id/new_place_description"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/orange_mediumd"
        android:textColorLink="@color/orange_solid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_place" />

    <EditText
        android:id="@+id/new_place_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:backgroundTint="@color/orange_solid"
        android:ems="10"
        android:hint="Descripción"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:minLines="3"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        android:textColorHint="@color/orange_mediumd"
        android:textColorLink="@color/orange_solid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_place_title" />


    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginTop="30dp"
        android:layout_marginEnd="90dp"
        android:background="@color/orange_light"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_baseline_cancel_24"
        app:layout_constraintEnd_toEndOf="@+id/new_place_description"
        app:layout_constraintTop_toBottomOf="@+id/new_place_description" />

    <ImageView
        android:id="@+id/img_place"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tag="empty"/>


</androidx.constraintlayout.widget.ConstraintLayout>