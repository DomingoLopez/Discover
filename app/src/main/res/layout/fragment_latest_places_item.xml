<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/author_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/author_phot"
            app:layout_constraintStart_toEndOf="@+id/author_phot"
            app:layout_constraintTop_toTopOf="@+id/author_phot" />

        <ImageView
            android:id="@+id/author_phot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_supervised_user_circle_24" />

        <TextView
            android:id="@+id/latest_places_item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/viewPagerLatest"
            app:layout_constraintTop_toBottomOf="@+id/viewPagerLatest" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerLatest"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/author_phot">

        </androidx.viewpager2.widget.ViewPager2>

        <RatingBar
            android:id="@+id/ratingBarPlace"
            style="?android:attr/ratingBarStyleIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:isIndicator="true"
            android:numStars="5"
            android:progressTint="@color/golden"
            android:secondaryProgressTint="@color/golden"
            android:stepSize="0.1"
            app:layout_constraintStart_toStartOf="@+id/latest_places_item_title"
            app:layout_constraintTop_toBottomOf="@+id/latest_places_item_title" />

        <Button
            android:id="@+id/btn_go_place_details"
            android:layout_width="56dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            app:icon="@drawable/ic_baseline_play_arrow_24"
            app:layout_constraintBottom_toBottomOf="@+id/ratingBarPlace"
            app:layout_constraintEnd_toEndOf="@+id/latest_places_item_title"
            app:layout_constraintTop_toTopOf="@+id/ratingBarPlace" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="0"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/ratingBarPlace"
            app:layout_constraintStart_toEndOf="@+id/ratingBarPlace"
            app:layout_constraintTop_toTopOf="@+id/ratingBarPlace" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
