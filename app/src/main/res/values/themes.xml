<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SupportYourDiscoveries" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_solid</item>
        <item name="colorPrimaryVariant">@color/orange_mediumd</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SupportYourDiscoveries.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SupportYourDiscoveries.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SupportYourDiscoveries.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="Theme.SupportYourDiscoveries.FullScreenDialogStyle" parent ="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/orange_solid</item>
        <item name="colorPrimaryVariant">@color/orange_mediumd</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/orange_mediumd</item>


        <!--Estilos para pantalla completa-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>

    </style>

    <style name="Theme.SupportYourDiscoveries.NoTitle" parent ="Theme.AppCompat.Dialog">

        <!--Estilos para pantalla completa-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>

    </style>






</resources>